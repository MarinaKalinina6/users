{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row mt-4 mb-5">

            <h1>Sign in</h1>
        </div>
        <div class="row">
            <form action="{{ path('signin') }}" method="post" novalidate="novalidate">
                <div id="form" novalidate="novalidate">
                    <div class="mb-3"><label for="username" class="form-label required">Username</label><input
                                type="text" id="username" name="_username" required="required"
                                value="{{ last_username }}"
                                class="form-control"></div>
                    <div class="mb-3"><label for="password" class="form-label required">Password</label>
                        <input type="password" id="password" name="_password" required="required"
                               class="password-field form-control" style="padding-right: 41.6px !important;"
                               data-protonpass-base-css="{&quot;padding-right&quot;:&quot;&quot;}"></div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="hidden" name="_target_path" value="{{ path('main') }}">
                    <div class="mb-3">
                        <button type="submit" id="form_save" name="form[save]" class="btn-primary btn">Submit</button>
                    </div>
                </div>
            </form>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div>Don't have an account? <a href={{ path('signup') }}>Sign up</a></div>
        </div>
    </div>



{% endblock %}
